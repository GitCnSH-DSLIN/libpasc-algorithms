unit operation_functor;

{$mode objfpc}{$H+}
{$IFOPT D+}
  {$DEFINE DEBUG}
{$ENDIF}

interface

uses
  SysUtils;

type
  generic IUnaryOperationFunctor<V, R> = interface
    function Run(Value : V) : R;
  end;

  generic ILogicUnaryOperationFunctor<V> = interface
    function Run(Value : V) : Boolean;
  end;

  generic IBinaryOperationFunctor<V, R> = interface
    function Run(Value1, Value2 : V) : R; 
  end;

  generic ILogicBinaryOperationFunctor<V> = interface
    function Run(Value1, Value2 : V) : Boolean;
  end;

implementation

end.